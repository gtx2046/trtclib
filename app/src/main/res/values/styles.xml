<resources>

    <color name="kangxin_color_EFEFEF">#EFEFEF</color>
    <color name="search_bg">#7BA6EC</color>

    <!--自定义dialog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <dimen name="dp_50">50dp</dimen>
    <dimen name="content_right_margin2">30dp</dimen>
    <dimen name="activity_contactus_textview_top_padding">20dp</dimen>
    <dimen name="by_25dp">25dp</dimen>
    <dimen name="by_0dp">0dp</dimen>
    <dimen name="by_8dp">8dp</dimen>
    <dimen name="by_20sp">20sp</dimen>
    <dimen name="by_20dp">20dp</dimen>
    <dimen name="by_16sp">16sp</dimen>
    <dimen name="by_12sp">12sp</dimen>
    <dimen name="by_30dp">30dp</dimen>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimary</item>
        <item name="colorAccent">@color/lightColorPrimary</item>
    </style>

    <!-- 我的选项卡-->
    <style name="FragmentMineButtonStyle">
        <item name="android:textSize">@dimen/by_16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">@dimen/content_left_margin</item>
        <item name="android:paddingRight">@dimen/content_right_margin</item>
        <item name="android:background">@color/white</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/content_icon_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/kangxin_dp_50</item>
    </style>

</resources>
