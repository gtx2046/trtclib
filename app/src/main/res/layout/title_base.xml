<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titlebar_rl_base_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kangxin_dp_45"
        android:paddingLeft="@dimen/kangxin_dp_15"
        android:paddingRight="@dimen/kangxin_dp_15">
        <!--左边的控件-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/basetitle_left_supertextview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/kangxin_dp_5"
                android:paddingLeft="@dimen/kangxin_dp_2"
                android:paddingRight="@dimen/kangxin_dp_2"
                android:paddingTop="@dimen/kangxin_dp_5"
                android:textColor="@color/kangxin_color_222222"
                android:textSize="@dimen/kangxin_sp_14"
                android:visibility="visible"
                tools:text="返回"/>

            <ImageView
                android:id="@+id/basetitle_left_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/kangxin_dp_10"
                android:paddingRight="@dimen/kangxin_dp_30"
                android:paddingTop="@dimen/kangxin_dp_10"
                android:src="@drawable/online_ic_back" />
        </FrameLayout>
        <!--中央标题-->
        <TextView
            android:id="@+id/basetitle_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/kangxin_sp_17"
            android:visibility="visible" />


        <!--右边的控件-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/basetitle_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/kangxin_dp_10"
                android:paddingRight="@dimen/kangxin_dp_10"
                android:paddingTop="@dimen/dp_3"
                android:text="@string/app_xml_quxiaodingdan"
                android:textColor="@color/kangxin_color_0086d1"
                android:textSize="@dimen/kangxin_sp_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/basetitle_right_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/kangxin_dp_10"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <!--分割线-->
    <View
        android:id="@+id/title_base_deviderline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kangxin_px_1"
        android:background="@color/kangxin_color_E0E0E0" />
</LinearLayout>
